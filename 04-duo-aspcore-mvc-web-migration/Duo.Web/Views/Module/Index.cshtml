@model ModuleViewModel

<div class="container py-4 text-white bg-dark rounded">
    <!-- Header: Timer | Coin Balance | Back -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <!-- Timer -->
        <div class="bg-secondary rounded px-3 py-2 d-flex align-items-center">
            <span class="me-2">⏱️</span>
            <strong>@Model.TimeSpent</strong>
        </div>

        <!-- Back Button -->
        <a href="/Course/@Model.CourseId" class="btn btn-outline-light">Back</a>

        <!-- Coin Balance -->
        <div class="bg-secondary rounded px-3 py-2 d-flex align-items-center">
            <strong>@Model.CoinBalance</strong>
            <span class="ms-2">🪙</span>
        </div>
    </div>

    <!-- Module Title and Description -->
    <h1 class="fw-bold mb-3">@Model.Module.Title</h1>
    <p class="text-muted">@Model.Module.Description</p>

    <!-- Complete Module Button -->
    @if (!Model.IsCompleted)
    {
        <form asp-controller="Module" asp-action="Complete" asp-route-id="@Model.Module.ModuleId" method="post">
            <button type="submit" class="btn btn-primary float-end">
                Complete Module
            </button>
        </form>
    }
    else
    {
        <div class="text-success fw-bold text-end mb-3">✅ Completed</div>
    }
</div>
