<Page
    x:Class="Project.Gui.DoctorInfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Project.Gui">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Button Content="Back" Click="BackButton_Click" />

                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Text="Doctor ID:" FontWeight="Bold" FontSize="16" Grid.Row="0" Grid.Column="0" />
                    <TextBlock Text="{Binding DoctorID}" FontSize="16" Grid.Row="0" Grid.Column="1" />

                    <TextBlock Text="Department ID:" FontWeight="Bold" FontSize="16" Grid.Row="1" Grid.Column="0" />
                    <TextBlock Text="{Binding DepartmentID}" FontSize="16" Grid.Row="1" Grid.Column="1" />

                    <TextBlock Text="License Number:" FontWeight="Bold" FontSize="16" Grid.Row="2" Grid.Column="0" />
                    <TextBlock Text="{Binding LicenseNumber}" FontSize="16" Grid.Row="2" Grid.Column="1" />

                    <TextBlock Text="Experience:" FontWeight="Bold" FontSize="16" Grid.Row="3" Grid.Column="0" />
                    <TextBlock Text="{Binding Experience}" FontSize="16" Grid.Row="3" Grid.Column="1" />

                    <TextBlock Text="Rating:" FontWeight="Bold" FontSize="16" Grid.Row="4" Grid.Column="0" />
                    <TextBlock Text="{Binding Rating}" FontSize="16" Grid.Row="4" Grid.Column="1" />

                    <TextBlock Text="Department Name:" FontWeight="Bold" FontSize="16" Grid.Row="5" Grid.Column="0" />
                    <TextBlock Text="{Binding DepartmentName}" FontSize="16" Grid.Row="5" Grid.Column="1" />

                    <TextBlock Text="Username:" FontWeight="Bold" FontSize="16" Grid.Row="6" Grid.Column="0" />
                    <TextBlock Text="{Binding Username}" FontSize="16" Grid.Row="6" Grid.Column="1" />

                    <TextBlock Text="Mail:" FontWeight="Bold" FontSize="16" Grid.Row="7" Grid.Column="0" />
                    <TextBlock Text="{Binding Mail}" FontSize="16" Grid.Row="7" Grid.Column="1" />

                    <TextBlock Text="Name:" FontWeight="Bold" FontSize="16" Grid.Row="8" Grid.Column="0" />
                    <TextBlock Text="{Binding Name}" FontSize="16" Grid.Row="8" Grid.Column="1" />

                    <TextBlock Text="Birthdate:" FontWeight="Bold" FontSize="16" Grid.Row="9" Grid.Column="0" />
                    <TextBlock Text="{Binding Birthdate}" FontSize="16" Grid.Row="9" Grid.Column="1" />

                    <TextBlock Text="CNP:" FontWeight="Bold" FontSize="16" Grid.Row="10" Grid.Column="0" />
                    <TextBlock Text="{Binding Cnp}" FontSize="16" Grid.Row="10" Grid.Column="1" />

                    <TextBlock Text="Address:" FontWeight="Bold" FontSize="16" Grid.Row="11" Grid.Column="0" />
                    <TextBlock Text="{Binding Address}" FontSize="16" Grid.Row="11" Grid.Column="1" />

                    <TextBlock Text="Phone Number:" FontWeight="Bold" FontSize="16" Grid.Row="12" Grid.Column="0" />
                    <TextBlock Text="{Binding PhoneNumber}" FontSize="16" Grid.Row="12" Grid.Column="1" />

                    <TextBlock Text="Registration Date:" FontWeight="Bold" FontSize="16" Grid.Row="13" Grid.Column="0" />
                    <TextBlock Text="{Binding RegistrationDate}" FontSize="16" Grid.Row="13" Grid.Column="1" />
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>