<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Project.Gui.DeleteViews.DeleteRoomView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Project.Gui.DeleteViews"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Margin="20">
            <TextBlock 
                Text="Delete Room" 
                FontSize="20" 
                FontWeight="Bold" 
                Margin="0,0,0,10" 
                HorizontalAlignment="Center" />
            
            <controls:DataGrid
                ItemsSource="{Binding Rooms}"
                AutoGenerateColumns="False"
                IsReadOnly="True"
                HorizontalAlignment="Stretch"
                Width="Auto"
                SelectionMode="Single"
                SelectedItem="{Binding SelectedRoom}">

                <controls:DataGrid.Columns>
                    <controls:DataGridTextColumn 
                        Header="Room ID" 
                        Binding="{Binding RoomID}" 
                        Width="*" />

                    <controls:DataGridTextColumn 
                        Header="Department ID" 
                        Binding="{Binding DepartmentID}" 
                        Width="*" />
                </controls:DataGrid.Columns>
            </controls:DataGrid>

            <TextBox 
                Text="{Binding RoomID, UpdateSourceTrigger=PropertyChanged}" 
                Margin="0,10" 
                PlaceholderText="Enter Room ID to delete" 
                HorizontalAlignment="Stretch" />

            <Button 
                Content="Delete Room" 
                Command="{Binding DeleteRoomCommand}" 
                HorizontalAlignment="Center" 
                Margin="10"
                IsEnabled="{Binding CanDeleteRoom}" />

            <TextBlock 
                Text="{Binding ErrorMessage}" 
                Foreground="Red" 
                HorizontalAlignment="Center" />
        </StackPanel>
    </Grid>
</Page>