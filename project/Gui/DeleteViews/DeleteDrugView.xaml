<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Project.Gui.DeleteViews.DeleteDrugView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Project.Gui.ModifyViews"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Delete Drug" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>
            <controls:DataGrid 
                ItemsSource="{Binding Drugs}" 
                AutoGenerateColumns="False" 
                IsReadOnly="True" 
                HorizontalAlignment="Stretch" 
                Width="Auto" 
                SelectionMode="Single"
                SelectedItem="{Binding SelectedDrug}">

                <controls:DataGrid.Columns>
                    <controls:DataGridTextColumn Header="Drug ID" Binding="{Binding DrugID}" Width="*" />
                    <controls:DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
                </controls:DataGrid.Columns>
            </controls:DataGrid>
            <TextBox 
                Text="{Binding DrugID, UpdateSourceTrigger=PropertyChanged}" 
                Margin="0,10" 
                PlaceholderText="Enter Drug ID to delete" 
                HorizontalAlignment="Stretch"/>
            <Button 
                Content="Delete Drug" 
                Command="{Binding DeleteDrugCommand}" 
                HorizontalAlignment="Center" 
                Margin="10"
                IsEnabled="{Binding CanDeleteDrug}"/>
            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
