@{
    ViewData["Title"] = "Home Page";
}

<div class="welcome-container text-center">
    <h1>Welcome to Duo</h1>
    <p class="lead">You are logged in successfully!</p>

    <div class="info-card">
        <div class="info-row">
            <span>Username:</span>
            <strong>@Context.Session.GetString("Username")</strong>
        </div>
        <div class="info-row">
            <span>User ID:</span>
            <strong>@Context.Session.GetInt32("UserId")</strong>
        </div>
        <div class="text-center mt-4">
            <form asp-controller="Account" asp-action="Logout" method="post">
                <button type="submit" class="btn btn-danger">Logout</button>
            </form>
        </div>
    </div>
</div>

<style>
    .welcome-container {
        margin-top: 2rem;
        padding: 1rem;
    }
    
    h1 {
        font-size: 2.5rem;
        color: #333;
        margin-bottom: 0.5rem;
    }
    
    .lead {
        color: #555;
        margin-bottom: 3rem;
    }
    
    .info-card {
        max-width: 400px;
        margin: 0 auto;
        background-color: white;
        border: 1px solid rgba(0,0,0,0.1);
        border-radius: 8px;
        padding: 2rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }
    
    .info-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 1rem;
        padding: 0.5rem 0;
    }
    
    .info-row span {
        color: #555;
    }
    
    .info-row strong {
        font-weight: 500;
    }
    
    .btn-danger {
        background-color: #e32929;
        border: none;
        padding: 0.5rem 2rem;
    }
</style>
