@model List<DuoClassLibrary.Models.Quizzes.Quiz>

@{
    ViewData["Title"] = "Manage Quizzes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Manage Quizzes</h2>
        <a class="btn btn-outline-secondary btn-sm" onclick="history.back()">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>

    <ul class="list-group">
        @foreach (var quiz in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center bg-dark text-light"
               data-quiz-id="@quiz.Id">                Quiz #@quiz.Id
                <form asp-action="DeleteQuiz"
                      asp-controller="Quiz"
                      asp-route-id="@quiz.Id"
                      method="post"
                      class="m-0 p-0">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-sm btn-outline-danger">
                        Remove
                    </button>
                </form>
            </li>
        }
    </ul>
</div>

    <h5 class="mb-3">Selected Exercises</h5>

    <div class="border rounded p-4 mb-3 dark-box" style="min-height: 200px;">
        <!-- Selected exercises go here -->
    </div>

    <div class="text-end">
        <button class="btn btn-primary btn-sm">Add Exercise</button>
    </div>
</div>

@section Styles {
    <style>
        body {
            background-color: #121212;
            color: #f8f9fa;
        }

        .dark-box {
            background-color: #1e1e1e;
            border-color: #444;
            color: #f8f9fa;
        }

        .list-group-item {
            color: #f8f9fa;
        }

        .btn-outline-danger {
            color: #dc3545;
            border-color: #dc3545;
        }

            .btn-outline-danger:hover {
                background-color: #dc3545;
                color: white;
            }

        .btn-outline-secondary {
            color: #adb5bd;
            border-color: #6c757d;
        }

            .btn-outline-secondary:hover {
                background-color: #6c757d;
                color: white;
            }

        .btn-primary {
            background-color: #0d6efd;
            border: none;
        }

            .btn-primary:hover {
                background-color: #0b5ed7;
            }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function() {
          const container = document.querySelector(".dark-box");
          document
            .querySelectorAll("ul.list-group > li[data-quiz-id]")
            .forEach(li => {
              li.style.cursor = "pointer";
              li.addEventListener("click", async () => {
                const quizId = li.dataset.quizId;
                const res = await fetch(`/Quiz/GetExercises?quizId=${quizId}`);
                if (!res.ok) {
                  container.innerHTML = "<p class='text-danger'>Error loading exercises.</p>";
                  return;
                }
                const exercises = await res.json();

                if (exercises.length === 0) {
                  container.innerHTML = "<p><em>No exercises assigned.</em></p>";
                } else {
                  let html = '<ul class="list-group list-group-flush">';
                  for (const ex of exercises) {
                    html += `
                      <li class="list-group-item bg-dark text-light">
                        Exercise #${ex.exerciseId}
                      </li>`;
                  }
                  html += "</ul>";
                  container.innerHTML = html;
                }
              });
            });
        });
    </script>
}
